{
  "name": "react-e6-express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:prod && node ./dist/server/index.js",
    "dev": "concurrently 'npm run build:client:dev' 'npm run build:server:dev' 'nodemon ./dist/server/index.js'",
    "build:prod": "npm run build:server && npm run build:client",
    "build:client": "webpack --config webpack.prod.config.js --profile --colors",
    "build:client:dev": "webpack --config webpack.config.js --profile --colors --watch",
    "build:server": "babel app -d dist --copy-files",
    "build:server:dev": "babel app -d dist --copy-files --watch",
    "test": "jest --coverage --watch"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MisaOgura/react-e6-express-boilerplate.git"
  },
  "keywords": [
    "javascript",
    "react",
    "es6",
    "express",
    "webpack",
    "babel"
  ],
  "author": "Misa Ogura",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MisaOgura/react-e6-express-boilerplate/issues"
  },
  "homepage": "https://github.com/MisaOgura/react-e6-express-boilerplate#readme",
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "concurrently": "^3.5.0",
    "enzyme": "^2.9.1",
    "express": "^4.15.4",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^15.6.1",
    "supertest": "^3.0.0",
    "webpack": "^3.5.3",
    "webpack-dev-server": "^2.7.1"
  }
}
